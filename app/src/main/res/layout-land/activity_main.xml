<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9b0"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fc2a08">

        <ImageView
            android:id="@+id/imgViewPreview"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="#ffab73" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:background="#fff9b0"
                android:gravity="clip_vertical">

                <ImageView
                    android:id="@+id/imgViewOne"
                    android:layout_width="139dp"
                    android:layout_height="210dp"
                    android:onClick="onClickPreview"
                    android:contentDescription="@string/img_one"
                    android:src="@drawable/img_one" />

                <ImageView
                    android:id="@+id/imgViewTwo"
                    android:layout_width="135dp"
                    android:layout_height="198dp"
                    android:onClick="onClickPreview"
                    android:contentDescription="@string/img_two"

                    android:src="@drawable/img_two" />

                <ImageView
                    android:id="@+id/imgViewThree"
                    android:layout_width="133dp"
                    android:layout_height="199dp"
                    android:onClick="onClickPreview"
                    android:contentDescription="@string/img_three"
                    android:src="@drawable/img_three" />

                <ImageView
                    android:id="@+id/imgViewFour"
                    android:layout_width="133dp"
                    android:layout_height="199dp"
                    android:onClick="onClickPreview"
                    android:contentDescription="@string/img_four"
                    android:src="@drawable/img_four" />

                <ImageView
                    android:id="@+id/imgViewFive"
                    android:layout_width="133dp"
                    android:layout_height="199dp"
                    android:onClick="onClickPreview"
                    android:contentDescription="@string/img_five"
                    android:src="@drawable/img_five" />

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff9b0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fc2a08">

            <ImageView
                android:id="@+id/imgViewPreview"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_centerInParent="true"
                android:background="#ffab73" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffd384"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/imgViewOne"
                        android:layout_width="139dp"
                        android:layout_height="210dp"
                        android:contentDescription="@string/img_one"
                        android:onClick="onClickPreview"
                        android:src="@drawable/img_one" />

                    <ImageView
                        android:id="@+id/imgViewTwo"
                        android:layout_width="135dp"
                        android:layout_height="198dp"
                        android:contentDescription="@string/img_two"
                        android:onClick="onClickPreview"

                        android:src="@drawable/img_two" />

                    <ImageView
                        android:id="@+id/imgViewThree"
                        android:layout_width="133dp"
                        android:layout_height="199dp"
                        android:contentDescription="@string/img_three"
                        android:onClick="onClickPreview"
                        android:src="@drawable/img_three" />

                    <ImageView
                        android:id="@+id/imgViewFour"
                        android:layout_width="133dp"
                        android:layout_height="199dp"
                        android:contentDescription="@string/img_four"
                        android:onClick="onClickPreview"
                        android:src="@drawable/img_four" />

                    <ImageView
                        android:id="@+id/imgViewFive"
                        android:layout_width="133dp"
                        android:layout_height="199dp"
                        android:contentDescription="@string/img_five"
                        android:onClick="onClickPreview"
                        android:src="@drawable/img_five" />

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>